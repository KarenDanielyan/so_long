{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "(lldb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/pipex",
      "MIMode": "lldb",
    },
    {
      "name": "OSX Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/so_long",
      "args": ["small.ber"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [{ "name": "config", "value": "debug" }],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "(Linux) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/so_long",
      "args": ["toto.ber"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": ["genadiy", "ls -l", "wc -l", "/dev/stdout"],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceRoot}/pipex",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {"text": "-gdb-set follow-fork-mode parent"}
      ]
    }
  ]
}